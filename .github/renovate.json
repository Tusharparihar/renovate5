{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "description": "Terraform providers should use n-2 version window",
      "matchManagers": ["terraform"],
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": ["azurerm", "hashicorp/azurerm"],
      "rangeStrategy": "n-2",
      "separateMajorMinor": false,
      "separateMultipleMajor": false,
      "ignoreUnstable": true,
      "respectLatest": false
    },
    {
      "description": "Disable major updates for terraform providers by default",
      "matchManagers": ["terraform"],
      "matchDatasources": ["terraform-provider"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Block azurerm v4 until we decide to upgrade major",
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": ["azurerm", "hashicorp/azurerm"],
      "allowedVersions": "<4.0.0"
    }
  ]
}
